//         <tr><td>Phone: ' . $phone . '</td></tr>
//         <tr><td>Message: ' . $text . '</td></tr>
//     </table>';
$mail->AltBody =
    '<table style="width:100%">
        <tr><td>' . $fullname . '</td></tr>
        <tr><td>Email: ' . $email . '</td></tr>
        <tr><td>phone: ' . $phone . '</td></tr>
        <tr><td>Message: ' . $text . '</td></tr>
    </table>';

if (!$mail->send()) {
    echo 'Message could not be sent.';
    echo 'Mailer Error: ' . $mail->ErrorInfo;
} else {
    echo 'Message has been sent';
}

